<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StarComputer.Server.UI.Avalonia.ListenView">
  <StackPanel Margin="30">
    <Button x:Name="listenButton" Content="Start listening" IsEnabled="{Binding CanStartListen}"/>
    <TextBlock Text="{Binding ErrorMessage}" TextWrapping="Wrap" Margin="10" Foreground="Red"/>
  </StackPanel>
</UserControl>
